
public class Prova1 {
	public static int exibir(int fi , int fi2 ,int cont)
	{
		int res;
		
		if(cont == 7)
		{
			return fi;
		}
		else
		{
		cont++;
		res = exibir(fi , fi2 , cont) ;
		fi2++;
		System.out.println(res);
		return res + fi + fi2;
		}
		
	}
	public static void main (String args[])
	{
	int fib= 1;
	int fib2 = 0;
	int cont = 0;
	exibir(fib ,fib2 , cont);
	}
}
