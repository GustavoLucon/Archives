
public class Prova1 {
	public static int exibir(int fi ,int fi2 ,int cont)
	{
		int res;
		if(cont == 7)
		{
			return fi;
		}
		else
		{
		cont++;
		fi2 = exibir(fi , fi2, cont);
		res = fi2 + fi;
		System.out.println(res);
		return res;
		}
		
	}
	public static void main (String args[])
	{
	int fib= 1;
	int fib2 = 0;
	int cont = 0 ;
	exibir(fib ,fib2 ,cont);
	}
}
