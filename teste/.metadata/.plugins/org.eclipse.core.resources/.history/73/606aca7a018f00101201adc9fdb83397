package Pai;
import java.net.*;
import java.awt.Image;
import java.awt.Toolkit;
import java.awt.event.KeyEvent;
import java.io.*;
import java.util.*;

import javax.swing.JOptionPane;
import javax.swing.KeyStroke;

public class ping {
	
	private static String dir1 = ("C:\\Users\\Guga\\Desktop\\Nova Pasta\\");
	private static int numips = 0;
	private static IP lista;
	private static Tela tela = new Tela();


public static void main(String[] args) {
	int cont = 0;
	Recebeip();
	long hora = Horas();
	tela.setVisible(true);
	for(int i = 0 ; i< 999999;i++)
	{
	if(cont < numips)
			{
		
	tela.jb1(lista.getNome(cont),lista.getIP(cont),Pingar(lista.buscaIP(cont),lista.getBarulho(cont)),cont);
	cont++;
			}
	else
	{
		cont = 0;
	}
	}	
}



private static long Horas() {
    Date d = new Date();
    GregorianCalendar datahora;
    TimeZone timezone;
	datahora = new GregorianCalendar();
	timezone = TimeZone.getTimeZone("GMT-03:00");
	TimeZone.setDefault(timezone);
    datahora.setTimeZone(timezone);
    d = datahora.getTime();
    d.setYear(1900 + d.getYear());
    return d.getTime();
    
}


private static void Recebeip() {
	String nome = "";
	String IP = "";
	boolean barulho;
    try {  
       BufferedReader leitor = new BufferedReader(new FileReader(dir1 + "IPS.txt"));
       String linhas;
       linhas = leitor.readLine();
       String palavra = "";
       int cont = 0 ;
       int i = 0 ;
       int a = 0 ;
       String[] b= linhas.split("");

       while (linhas != null) 
       {  
     	  b= linhas.split("");
     			if(b.length > a)
     			{
     			if(b[a].equals(";"))
     			{
     			 IP = palavra;
     			 palavra = "";
     			}
     			else if(b[a].equals(","))
     			{
     			nome = palavra;
     			cont++;
     			if(palavra.equals("X"))
     			{
     				 barulho = false;
     			}
     			else
     			{
     				 barulho = true;
     			}
     			
     			if(numips == 0)
     			{
     				lista = new IP(IP,nome,numips,barulho);
     			}
     			else
     				{
     				lista.filhos(IP,nome,numips,barulho);
     				}
     			 numips++;
     			 palavra = "";
     			 cont++;
     			}
     			else
     			{
     				palavra = palavra + b[a];
     			}
     			i++;
     			
     			}
     			else
     			{
					i=0;
					a=0;
					linhas = leitor.readLine();
     			}
     			a++;
 			}  
     	            leitor.close();  
     	         } catch (Exception e) {  
     	        	 JOptionPane.showMessageDialog(null, "Erro do arquivo");
     	        	 System.exit(0);
     	        }                        
}

public static int Pingar(String ip,boolean barulho)
{
	int resp = 0;
	String pingResult = "";
	String inputLine;

	String pingCmd = "ping " + ip + " -w 2";

	try {
		resp = 1;
		Runtime r = Runtime.getRuntime();
		Process p = r.exec(pingCmd);

		BufferedReader in = new BufferedReader(new InputStreamReader(p.getInputStream()));
		while ((inputLine = in.readLine()) != null) {
		tela.EscreveTexto(inputLine);
		pingResult += inputLine;
		if(inputLine.contains("Esgotado o tempo limite do pedido."))
		{
			if(barulho == false)
			{
			resp = 0;
			Toolkit.getDefaultToolkit().beep(); 
			}
		}
		else if (inputLine.contains("Host de destino inacess¡vel."))
		{
			if(barulho == false)
			{
			resp = 0;
			Toolkit.getDefaultToolkit().beep(); 
			}
		}
	}
	in.close();
	}
	catch (IOException e) {
	System.out.println(e);
	}
	return resp;

}

}