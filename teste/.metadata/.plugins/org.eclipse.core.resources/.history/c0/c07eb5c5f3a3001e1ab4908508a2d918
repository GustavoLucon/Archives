
public class Prova1 {
	public static int exibir(int fi ,int cont)
	{
		int res;
		
		if(cont == 7)
		{
			return fi;
		}
		else
		{
		cont++;
		res = exibir(fi , cont) ;
		fi++;
		res = res + fi;
		System.out.println(res);
		return res;
		}
		
	}
	public static void main (String args[])
	{
	int fib= 1;
	
	int cont = 0;
	exibir(fib , cont);
	}
}
