
public class Prova1 {
	public static int exibir(int fi , int fi2)
	{
		int res = fi2;
		int cont = 0 ;
		if(cont == 7)
		{
		return res ;	
		}
		else
		{
		fi = res;
		cont++ ;
		res = fi + exibir(fi , cont);
		System.out.println(res);
		return res ;
		}
	}
	public static void main (String args[])
	{
	int fib= 0;
	int fib2 = 0;
	exibir(fib , fib2);
	}
}
