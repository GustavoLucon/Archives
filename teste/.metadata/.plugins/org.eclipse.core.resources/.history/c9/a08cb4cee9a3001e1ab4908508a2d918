
public class Prova1 {
	public static int exibir(int fi , int fi2 ,int cont)
	{
		int res = fi2;
		if(cont == 7)
		{
		return res ;	
		}
		else
		{
		fi = res;
		cont++ ;
		res = fi + exibir(fi , res , cont);
		System.out.println(res);
		return res ;
		}
	}
	public static void main (String args[])
	{
	int fib= 1;
	int fib2 = 1;
	int cont = 0 ;
	exibir(fib , fib2 , cont);
	}
}
