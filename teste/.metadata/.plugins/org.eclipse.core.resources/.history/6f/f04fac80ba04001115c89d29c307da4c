    private void jTable1MouseClicked(java.awt.event.MouseEvent evt) throws BiffException, IOException {
    	workbook = Workbook.getWorkbook(new File("c:\\exemplo.xls"));

    	 Sheet sheet = workbook.getSheet(0);
    	 int linhas = sheet.getRows();
    	 int altura = 0;
    	 
    	 for(int i = 1; i < linhas; i++  )
         {
             Cell celula1 = sheet.getCell(0, i);
             Cell disponivel = sheet.getCell(2, i);
             
             if(disponivel.equals("Não Disponivel"))
             {
            	 jTable1.setValueAt(celula1,0 , altura);
            	 altura++;
             }

         }
    }                                    

